<div class="container">
  <div class="bg-success" style="align-items: center;">
    <h1 style="padding: 10px;">Smart Sell&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<small>product by <a href="http://ec-merchant.com" target="_blank">ec-merchant.com</a></small></h1>
  </div>
  <h4>ログイン中：<%= @user %>&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to "MWSアカウントの設定", {:controller => "items", :action => "regist"}, {:target => "_blank"} %>&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to "ヤフオク設定", {:controller => "items", :action => "setup"}, {:target => "_blank"} %></h4>

  <ul class="nav nav-tabs" role="tablist">
    <li class="active" role="presentation">
      <a aria-controls="tab_a" data-toggle="tab" href="#tab_a" role="tab">商品情報の取得</a>
    </li>
    <li role="presentation">
      <a aria-controls="tab_b" data-toggle="tab" href="#tab_b" role="tab">出品CSVの作成</a>
    </li>
    <li role="presentation">
      <a aria-controls="tab_c" data-toggle="tab" href="#tab_c" role="tab">C</a>
    </li>
  </ul>
  <br>

  <div class="tab-content">
    <div class="tab-pane active" id="tab_a" role="tabpanel">

      <div class="row">
        <form class="form-inline">
          <div class="form-group" >
            <div class="col-sm-12">
              <label for="maxnumber" class="col-form-label">取得上限数（最大：9600件）</label>
              <input id="maxnumber" type="number" class="form-control" value="9600" style="width: 100px;">
            </div>
          </div>
          <div class="col-sm-4">
            <div class="input-group" style="width: 350px;">
              <span class="input-group-btn">
                <button id="submit_url" class="btn btn-success" type="button" style="width: 80px;">取得開始</button>
              </span>
              <input type="text" id="input_url" class="form-control" placeholder="Input Amazon URL Here ..">
            </div>
          </div>
          <button id="connet_yahoo" class="btn btn-success" type="button" style="width: 120px;">ヤフオク取得</button>
        </form>
      </div>
      <input id="progress" value="continue" type="hidden" />
      <!--
      <% @tt=Time.now.strftime("_%Y%m%d%H%M") %>

      <div>
        <a href="#" id="output" download="list<%= @tt %>.txt" class="btn btn-success" style="width: 80px;">ASIN出力</a>
      </div>
      -->
      <br>
      <div id="selected"></div>
      <div id="result"></div>
    </div>
    <div class="tab-pane" id="tab_b" role="tabpanel">
      <br>
      <div id="selected_csv"></div>
      <div id="result_csv"></div>
    </div>
    <div class="tab-pane" id="tab_c" role="tabpanel">
      <p>
        タブC!!
      </p>
    </div>
  </div>
</div>
<%= javascript_include_tag 'items_show', 'data-turbolinks-track': 'reload'  %>
